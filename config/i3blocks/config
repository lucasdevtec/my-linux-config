# i3blocks config file

# List of valid properties:

# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties

command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=20
markup=pango
color=#88C0D0

# modules

[keyindicator]
instance=CAPS
interval=once
signal=11
command=~/.config/i3blocks/keyindicator

[module-calendar]
interval=60
command=~/.config/i3blocks/module-calendar

[temperature]
interval=10
command=~/.config/i3blocks/temperature

[cpu_usage]
interval=10
command=~/.config/i3blocks/cpu_usage
